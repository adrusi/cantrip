{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES2022",
    "verbatimModuleSyntax": false,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["src/*.ts", "test/*.ts"]
}
