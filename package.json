{
  "name": "cantrip",
  "private": true,
  "type": "module",
  "workspaces": [
    "array",
    "error",
    "typelevel",
    "compat",
    "internal-util",
    "iter",
    "scope",
    "text",
    "babel-plugin-transform-scope",
    "typescript-eslint-rule-await-all-promises"
  ],
  "scripts": {
    "test": "npm run test:main && npm run test:eslint-rule",
    "test:main": "vitest run",
    "test:eslint-rule": "npm run test -w typescript-eslint-rule-await-all-promises",
    "test:all": "npm run test",
    "test:watch": "npm run test:main:watch",
    "test:main:watch": "vitest",
    "test:eslint-rule:watch": "npm run test:watch -w typescript-eslint-rule-await-all-promises",
    "test:coverage": "vitest run --coverage",
    "build": "npm run build --workspaces --if-present",
    "clean": "rm -rf coverage && npm run clean --workspaces --if-present",
    "typecheck": "npm run tsc --workspaces --if-present",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "npm run test:watch"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4"
  }
}
